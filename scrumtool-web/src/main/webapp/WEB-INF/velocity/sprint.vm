<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link href="webjars/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet">
		<link rel="stylesheet" type="text/css" href="resources/css/dragula.min.css">
		<link rel="stylesheet" type="text/css" href="resources/css/scrumtool.css">
		
		<script type="text/javascript" src="resources/js/jquery.min.js"></script>
		<script type="text/javascript" src="resources/js/dragula.min.js"></script>
		<script type="text/javascript" src="resources/js/ajax.js"></script>
		<script type="text/javascript" src="resources/js/scrumtool.js"></script>
  		<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
		
		<title>ScrumTool</title>

	</head>

	<body>
		<nav class="navbar navbar-inverse navbar-fixed-top">
			<div class="container">
				<div class="navbar-header">
					<a id="titleLink" class="navbar-brand">Scrumtool</a>
				</div>
				<div>
      			<ul class="nav navbar-nav">
        			<li><a href="home">Backlog</a></li>
        			<li><a href="#">Sprint</a></li> 
      			</ul>
    		</div>
			</div>
		</nav>
		
		<div class="container">

			<div class="jumbotron">
				<h1>Sprint</h1>
				<button type="button" class="btn btn-info"><a href="close-sprint">Close sprint</a></button>
			</div>
		
		<div id="detailStory" style="display: none;">
		 <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Story detail</a></li>
    <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Tasks</a></li>
  </ul>

  <!-- Tab panes -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="home">
    <p><b>Title : </b><span id="storyTitle"></span></p>
    <p><b>Description : </b><span id="storyDescription"></span></p>
    <p><b>Story Point : </b><span id="storyPoint"></span><p>
    </div>
    <div role="tabpanel" class="tab-pane" id="profile">
    
    <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
  <div class="panel panel-default">
    <div class="panel-heading" role="tab" id="headingOne">
      <h4 class="panel-title">
        <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          Task 1
        </a>
      </h4>
    </div>
    <div id="collapseOne" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
      <div class="panel-body">
		Task 1 Detail
      </div>
    </div>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading" role="tab" id="headingThree">
      <h4 class="panel-title">
        <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
          Task 2
        </a>
      </h4>
    </div>
    <div id="collapseThree" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingThree">
      <div class="panel-body">
		Task 2 Detail
      </div>
    </div>
  </div>
</div>
    
    </div>
  </div>
		
		</div>
		
			<div class="drag-container">
		<ul class="drag-list">
			<li class="drag-column drag-column-on-hold">
				<span class="drag-column-header">
					<h2>To Do</h2>
				</span>
				<ul class="drag-inner-list" id="story_column_1" data-storycolumnid="4">
					#foreach($story in $TODO)
						<li class="drag-item" data-storyid="$story.id">
							<span class="drag-title" >$story.title</span>
							<button type="button" class="close btnSup" id="$story.id" data-dismiss="alert" aria-label="Close"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>
							<p><span class="badge">$story.storyPoints</span></p>
						</li>
					#end
				</ul>
			</li>
			<li class="drag-column drag-column-in-progress">
				<span class="drag-column-header">
					<h2>Doing</h2>
				</span>
				<ul class="drag-inner-list" id="story_column_2" data-storycolumnid="5">
					#foreach($story in $DOING)
						<li class="drag-item" data-storyid="$story.id">
							<span class="drag-title" >$story.title</span>
							<button type="button" class="close btnSup" id="$story.id" data-dismiss="alert" aria-label="Close"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>
							<p><span class="badge">$story.storyPoints</span></p>
						</li>
					#end
				</ul>
			</li>
			<li class="drag-column drag-column-needs-review">
				<span class="drag-column-header">
					<h2>Done</h2>
				</span>
				<ul class="drag-inner-list" id="story_column_3" data-storycolumnid="6">
					#foreach($story in $DONE)
						<li class="drag-item" data-storyid="$story.id">
							<span class="drag-title" >$story.title</span>
							<button type="button" class="close btnSup" id="$story.id" data-dismiss="alert" aria-label="Close"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>
							<p><span class="badge">$story.storyPoints</span></p>
						</li>
					#end
				</ul>
			</li>
		</ul>
	</div>
  </div>


		

	</body>
</html>
